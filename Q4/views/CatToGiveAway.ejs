        <script>
            // Function to update date and time
            function updateDateTime() {
                var datetimeElement = document.getElementById('datetime');
                var now = new Date();
                var dateString = now.toDateString();
                var timeString = now.toLocaleTimeString();
    
                // Format date and time
                var formattedDateTime = 'Current Date and Time: ' + dateString + ' ' + timeString;
    
                // Update the content of the element
                datetimeElement.textContent = formattedDateTime;
            }
    
            // Call the function initially to display date and time
            updateDateTime();
    
            // Update date and time every second
            setInterval(updateDateTime, 1000);
             // Client-side form validation
             var form = document.getElementById('giveAwayForm');
   form.addEventListener('submit', function(event) {
    // Validation for cat traits
    var checkBoxes = form.querySelectorAll('input[type="checkbox"]');
    var atLeastOneChecked = false;

    checkBoxes.forEach(function(checkbox) {
        if (checkbox.checked) {
            atLeastOneChecked = true;
        }
    });

    if (!atLeastOneChecked) {
        alert('Please select at least one trait for your new pet.');
        event.preventDefault(); // Prevent form submission
        return; // Exit the function early if traits are not selected
    }
    // Validation for additional information
    let additionalInfo = document.getElementById('additionalInfo').value.trim();
    
    if (additionalInfo === "") {
        alert("Please provide additional information regarding your pet.");
        event.preventDefault(); // Prevent form submission
        return; // Exit the function early if additional information is not provided
    }

    // Validation for name
    let x = document.forms["giveAwayForm"]["fname"].value.trim();
    let y = document.forms["giveAwayForm"]["lname"].value.trim();
    
    if (x === "") {
        alert("First name must be filled out");
        event.preventDefault(); // Prevent form submission
        return; // Exit the function early if first name is not filled
    }
    
    if (y === "") {
        alert("Last name must be filled out");
        event.preventDefault(); // Prevent form submission
        return; // Exit the function early if last name is not filled
    }
    // Validation for email
    let email = document.forms["giveAwayForm"]["email"].value.trim();
    let emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    if (!emailRegex.test(email)) {
        alert("Please enter a valid email address.");
        event.preventDefault(); // Prevent form submission
        return; // Exit the function early if email is invalid
    }
});
// Get the privacy link and popup elements
var privacyLink = document.getElementById('privacy-link');
    var popup = document.getElementById('popup');

    // Show the popup when privacy link is clicked
    privacyLink.addEventListener('click', function(event) {
        event.preventDefault(); // Prevent the default action of the link
        popup.style.display = 'block'; // Show the popup
    });

    // Close the popup when the close button is clicked
    document.getElementById('close-popup').addEventListener('click', function() {
        popup.style.display = 'none'; // Hide the popup
    });

        </script>

        <section class="FindaDogCat">
        
            <form  action="/cattogiveaway" method="post" id="form" >
                <fieldset class="Info1">
                    <legend class="Cat Give Away Form" >
                        Cat Give Away Form
                    </legend>
                    <p class="info" >
                        <label for="cat_breed">Which specific cat breed are you interested in adopting ?
                            <select name="cat_breed1" id="cat_breed">
                                <option value="">----------Select----------</option>
                                <option value="bengal">Bengal</option>
                                <option value="birman">Birman</option>
